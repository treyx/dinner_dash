<% @current_cart.cart_items_and_quantity.each do |item, quantity| %>
  <div id="item_title"><%= item.title %></div>
  <div id="item_quantity"><%= quantity %></div>
  <div id="item_price"><%= number_to_currency(item.price, precision: 2) %></div>
  <div id="remove_from_cart_button"> <td><%= link_to "Remove From Cart", cart_path(item), method: :delete %></td>
  <p>Modify Quantity </p>
    <div id="modify_quantity_button"> 
      <td> <%= button_to '+1', {:controller => "cart", :action => "update", :item_id => item.id, :quantity => "increase" } , :method=>:put  %> </td>
      <td> <%= button_to '-1', {:controller => "cart", :action => "update", :item_id => item.id, :quantity => "decrease" } , :method=>:put  %> </td>
   </div>
<% end %>

<div id="order_button"><%= button_to 'Submit Order', orders_path(:cart => @current_cart.cart_items) %></div>

